<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vico.vicospace.InsertArticleActivity">

    <EditText
        android:id="@+id/etArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/etArticleContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/ivInsertArticlePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/example" />
    <Button
        android:id="@+id/btSubmitArticle"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发表文章"/>
</LinearLayout>
